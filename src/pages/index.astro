---
import { appConfig } from '../../server/config.js';
import { getTranslations } from '../../server/i18n.js';

const t = getTranslations(appConfig.language);

const qualityOptions = [
  { value: 'best', label: t.qualityBest },
  { value: '1080p', label: t.quality1080p },
  { value: '720p', label: t.quality720p },
  { value: '480p', label: t.quality480p }
];

const maxRequests = appConfig.rateLimit.maxRequests;
const windowMinutes = appConfig.rateLimit.windowMinutes;
const ttlMinutes = appConfig.download.ttlMinutes;
const maxFileSizeMb = appConfig.download.maxFileSizeMb;

function formatWindow(minutes: number) {
  if (minutes % 60 === 0) {
    const hours = minutes / 60;
    return `${hours} ${hours === 1 ? t.timeHour : t.timeHours}`;
  }
  return `${minutes} ${t.timeMinutes}`;
}

function formatMinutes(minutes: number) {
  if (minutes === 1) return `1 ${t.timeMinute}`;
  return `${minutes} ${t.timeMinutes}`;
}

const noteLimitText = t.noteRateLimit(maxRequests, formatWindow(windowMinutes));
const noteCleanupText = t.noteCleanup(formatMinutes(ttlMinutes));
const lang = appConfig.language;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{t.pageTitle}</title>
    <link rel="icon" type="image/png" href="/images/amia.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
      :root {
        --bg-dark: #020617;
        --bg-card: rgba(15, 23, 42, 0.6);
        --bg-input: rgba(30, 41, 59, 0.7);
        --accent-primary: #38bdf8;
        --accent-secondary: #818cf8;
        --text-main: #f8fafc;
        --text-muted: #94a3b8;
        --border-color: rgba(148, 163, 184, 0.1);
        --glass-border: rgba(255, 255, 255, 0.08);
        --success: #4ade80;
        --error: #f87171;
      }

      body {
        margin: 0;
        min-height: 100vh;
        font-family: 'Outfit', system-ui, -apple-system, sans-serif;
        background-color: var(--bg-dark);
        background-image: 
          radial-gradient(circle at 10% 20%, rgba(56, 189, 248, 0.15) 0%, transparent 40%),
          radial-gradient(circle at 90% 80%, rgba(129, 140, 248, 0.15) 0%, transparent 40%);
        color: var(--text-main);
        display: grid;
        place-items: center;
        padding: 1.5rem;
        line-height: 1.6;
      }

      main {
        width: min(580px, 100%);
        background: var(--bg-card);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border-radius: 2rem;
        padding: 3rem;
        box-shadow: 
          0 25px 50px -12px rgba(0, 0, 0, 0.5),
          0 0 0 1px var(--glass-border);
        position: relative;
        overflow: hidden;
      }

      /* Subtle top highlight */
      main::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      }

      .header {
        text-align: center;
        margin-bottom: 2.5rem;
      }

      h1 {
        margin: 0;
        font-size: 3.5rem;
        font-weight: 700;
        letter-spacing: -0.03em;
        background: linear-gradient(135deg, #fff 30%, #94a3b8 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        line-height: 1.1;
      }

      .subtitle {
        margin-top: 0.75rem;
        font-size: 1.1rem;
        color: var(--text-muted);
        font-weight: 400;
      }

      form {
        display: grid;
        gap: 1.5rem;
      }

      .form-group {
        display: grid;
        gap: 0.5rem;
      }

      label {
        font-size: 0.9rem;
        font-weight: 500;
        color: var(--text-muted);
        margin-left: 0.25rem;
      }

      .input-wrapper {
        position: relative;
        transition: transform 0.2s ease;
      }

      input, select {
        width: 100%;
        box-sizing: border-box;
        background: var(--bg-input);
        border: 1px solid var(--border-color);
        border-radius: 1rem;
        padding: 1rem 1.25rem;
        font-size: 1rem;
        color: white;
        font-family: inherit;
        transition: all 0.2s ease;
        outline: none;
      }

      input:focus, select:focus {
        background: rgba(30, 41, 59, 0.9);
        border-color: rgba(56, 189, 248, 0.5);
        box-shadow: 0 0 0 4px rgba(56, 189, 248, 0.1);
      }

      input::placeholder {
        color: rgba(148, 163, 184, 0.5);
      }

      .row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
      }

      button {
        margin-top: 0.5rem;
        background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
        border: none;
        border-radius: 1rem;
        padding: 1rem;
        font-size: 1.1rem;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 12px rgba(56, 189, 248, 0.25);
        position: relative;
        overflow: hidden;
      }

      button::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(rgba(255,255,255,0.2), transparent);
        opacity: 0;
        transition: opacity 0.2s;
      }

      button:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(56, 189, 248, 0.35);
      }

      button:hover:not(:disabled)::after {
        opacity: 1;
      }

      button:active:not(:disabled) {
        transform: translateY(0);
      }

      button:disabled {
        opacity: 0.7;
        cursor: not-allowed;
        filter: grayscale(0.5);
      }

      .status-card {
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(15, 23, 42, 0.4);
        border-radius: 1rem;
        border: 1px solid var(--border-color);
        display: none;
        flex-direction: column;
        gap: 1rem;
        animation: slideDown 0.3s ease-out;
      }

      @keyframes slideDown {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .status-card.active {
        display: flex;
      }

      .status-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.95rem;
      }

      #status-message {
        font-weight: 500;
      }

      #status-message.success { color: var(--success); }
      #status-message.error { color: var(--error); }

      progress {
        width: 100%;
        height: 0.6rem;
        border-radius: 999px;
        overflow: hidden;
        appearance: none;
        border: none;
        background: rgba(255, 255, 255, 0.1);
      }

      progress::-webkit-progress-bar {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 999px;
      }

      progress::-webkit-progress-value {
        background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
        border-radius: 999px;
        transition: width 0.3s ease;
      }

      progress::-moz-progress-bar {
        background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
        border-radius: 999px;
      }

      .download-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem;
        background: rgba(74, 222, 128, 0.15);
        color: #86efac;
        text-decoration: none;
        border-radius: 0.75rem;
        font-weight: 600;
        transition: all 0.2s;
        border: 1px solid rgba(74, 222, 128, 0.2);
      }

      .download-btn:hover {
        background: rgba(74, 222, 128, 0.25);
        transform: translateY(-1px);
      }

      .platforms {
        margin-top: 2.5rem;
        text-align: center;
      }

      .platforms h3 {
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
        margin-bottom: 1rem;
        opacity: 0.7;
      }

      .platforms-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.6rem;
      }

      .platform-tag {
        padding: 0.4rem 0.8rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid var(--border-color);
        border-radius: 2rem;
        font-size: 0.85rem;
        color: var(--text-muted);
        transition: all 0.2s;
      }

      .platform-tag:hover {
        background: rgba(255, 255, 255, 0.08);
        color: white;
        border-color: rgba(255, 255, 255, 0.1);
      }

      .note {
        margin-top: 2rem;
        font-size: 0.85rem;
        color: rgba(148, 163, 184, 0.6);
        text-align: center;
        line-height: 1.6;
      }

      .footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
        text-align: center;
        font-size: 0.875rem;
        color: var(--text-muted);
      }

      .footer a {
        color: inherit;
        text-decoration: none;
        transition: color 0.2s;
        border-bottom: 1px dotted rgba(148, 163, 184, 0.4);
      }

      .footer a:hover {
        color: var(--accent-primary);
        border-bottom-color: var(--accent-primary);
      }

      @media (max-width: 600px) {
        main {
          padding: 1.5rem;
        }
        h1 {
          font-size: 2.5rem;
        }
        .row {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <div class="header">
        <h1>Amia</h1>
        <p class="subtitle">{t.pageSubtitle}</p>
      </div>

      <form id="download-form" autocomplete="off">
        <div class="form-group">
          <label for="url">{t.urlLabel}</label>
          <div class="input-wrapper">
            <input
              type="url"
              id="url"
              name="url"
              placeholder={t.urlPlaceholder}
              required
            />
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label for="format-select">{t.formatLabel}</label>
            <div class="input-wrapper">
              <select name="format" id="format-select">
                <option value="mp4">{t.formatMp4}</option>
                <option value="webm">{t.formatWebm}</option>
                <option value="mp3">{t.formatMp3}</option>
              </select>
            </div>
          </div>

          <div class="form-group" id="quality-label">
            <label for="quality-select">{t.qualityLabel}</label>
            <div class="input-wrapper">
              <select name="quality" id="quality-select">
                {qualityOptions.map((option) => (
                  <option value={option.value}>{option.label}</option>
                ))}
              </select>
            </div>
          </div>
        </div>

        <button type="submit">
          <span>{t.downloadButton}</span>
        </button>
      </form>

      <section class="status-card" id="status-card">
        <div class="status-header">
          <span id="status-message"></span>
          <span id="progress-text"></span>
        </div>
        <progress id="progress-bar" value="0" max="100"></progress>
        <a id="download-link" class="download-btn" href="#" hidden>
          <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
          </svg>
          {t.downloadLinkText}
        </a>
      </section>

      <div class="platforms">
        <h3>{t.platformsTitle}</h3>
        <div class="platforms-list">
          <span class="platform-tag">YouTube</span>
          <span class="platform-tag">TikTok</span>
          <span class="platform-tag">Twitter/X</span>
          <span class="platform-tag">Instagram</span>
          <span class="platform-tag">Facebook</span>
          <span class="platform-tag">Twitch</span>
          <span class="platform-tag">Vimeo</span>
          <span class="platform-tag">SoundCloud</span>
          <span class="platform-tag">{t.platformsMore}</span>
        </div>
      </div>

      <p class="note">
        {noteLimitText} • {noteCleanupText} • {t.noteMaxSize(maxFileSizeMb)}
      </p>

      <footer class="footer">
        <p>
          <a href="https://github.com/Multex/amia" target="_blank" rel="noopener noreferrer">GitHub</a>
          •
          Powered by <a href="https://github.com/yt-dlp/yt-dlp" target="_blank" rel="noopener noreferrer">yt-dlp</a>
        </p>
      </footer>
    </main>

    <script type="module" define:vars={{ translations: t }}>
      const form = document.getElementById('download-form');
      const formatSelect = document.getElementById('format-select');
      const qualitySelect = document.getElementById('quality-select');
      const statusCard = document.getElementById('status-card');
      const statusMessage = document.getElementById('status-message');
      const progressBar = document.getElementById('progress-bar');
      const progressText = document.getElementById('progress-text');
      const downloadLink = document.getElementById('download-link');
      const submitBtn = form.querySelector('button');

      let pollTimer = null;
      let activeToken = null;

      const qualityPresets = [
        { value: 'best', label: translations.qualityBest },
        { value: '1080p', label: translations.quality1080p },
        { value: '720p', label: translations.quality720p },
        { value: '480p', label: translations.quality480p }
      ];

      function setVideoQualityOptions() {
        qualitySelect.innerHTML = '';
        for (const option of qualityPresets) {
          const node = document.createElement('option');
          node.value = option.value;
          node.textContent = option.label;
          qualitySelect.appendChild(node);
        }
      }

      function setAudioQualityOption() {
        qualitySelect.innerHTML = '';
        const node = document.createElement('option');
        node.value = 'audio';
        node.textContent = translations.qualityAudio;
        qualitySelect.appendChild(node);
      }

      function updateQualityOptions() {
        if (formatSelect.value === 'mp3') {
          setAudioQualityOption();
        } else {
          setVideoQualityOptions();
        }
      }

      updateQualityOptions();

      formatSelect.addEventListener('change', () => {
        updateQualityOptions();
      });

      function showStatusCard() {
        statusCard.classList.add('active');
      }

      function resetStatus() {
        if (pollTimer) {
          clearInterval(pollTimer);
          pollTimer = null;
        }
        activeToken = null;
        statusMessage.textContent = '';
        statusMessage.className = '';
        progressBar.value = 0;
        progressText.textContent = '';
        downloadLink.hidden = true;
        downloadLink.removeAttribute('href');
      }

      async function pollStatus(token) {
        try {
          const response = await fetch(`/api/status/${token}`);
          if (!response.ok) {
            throw new Error(translations.errorStateUnavailable);
          }
          const data = await response.json();
          progressBar.value = data.progress ?? 0;
          progressText.textContent = `${data.progress ?? 0}%`;

          if (data.status === 'completed') {
            statusMessage.textContent = translations.statusReady;
            statusMessage.className = 'success';
            downloadLink.href = `/api/download/${token}`;
            downloadLink.hidden = false;
            submitBtn.removeAttribute('disabled');
            if (pollTimer) {
              clearInterval(pollTimer);
              pollTimer = null;
            }
          } else if (data.status === 'error') {
            statusMessage.textContent = data.error ?? translations.errorGeneric;
            statusMessage.className = 'error';
            downloadLink.hidden = true;
            progressBar.value = 0;
            submitBtn.removeAttribute('disabled');
            if (pollTimer) {
              clearInterval(pollTimer);
              pollTimer = null;
            }
          }
        } catch (error) {
          statusMessage.textContent =
            error instanceof Error ? error.message : translations.errorStateUnavailable;
          statusMessage.className = 'error';
          submitBtn.removeAttribute('disabled');
          if (pollTimer) {
            clearInterval(pollTimer);
            pollTimer = null;
          }
        }
      }

      form.addEventListener('submit', async (event) => {
        event.preventDefault();
        resetStatus();
        showStatusCard();
        statusMessage.textContent = translations.statusInitiating;
        submitBtn.setAttribute('disabled', 'true');

        const formData = new FormData(form);
        const payload = {
          url: formData.get('url'),
          format: formData.get('format'),
          quality: formData.get('quality')
        };

        try {
          const response = await fetch('/api/download', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });

          const data = await response.json().catch(() => ({}));

          if (!response.ok) {
            throw new Error(data.error ?? translations.errorCouldNotStart);
          }

          activeToken = data.token;
          statusMessage.textContent = translations.statusDownloading;
          statusMessage.className = '';
          progressText.textContent = '0%';
          pollStatus(activeToken);
          pollTimer = setInterval(() => pollStatus(activeToken), 3000);
        } catch (error) {
          statusMessage.textContent =
            error instanceof Error ? error.message : translations.errorCouldNotStart;
          statusMessage.className = 'error';
          submitBtn.removeAttribute('disabled');
        }
      });
    </script>
  </body>
</html>
